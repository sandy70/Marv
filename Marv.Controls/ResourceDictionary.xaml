<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:local="clr-namespace:Marv.Controls"
                    xmlns:system="clr-namespace:System;assembly=mscorlib"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    
    <DropShadowEffect x:Key="DropShadow" Opacity="0.3" ShadowDepth="3" />
    <DropShadowEffect x:Key="DropShadowDeeper" Opacity="0.3" ShadowDepth="5" />

    <SolidColorBrush x:Key="BackgroundVeryLight" Color="White" />
    <SolidColorBrush x:Key="BackgroundLight" Color="LightGray" />
    <SolidColorBrush x:Key="BackgroundMedium" Color="DarkGray" />
    <SolidColorBrush x:Key="BackgroundDark" Color="Gray" />
    
    <local:BooleanNotConverter x:Key="BooleanNotConverter" />
    <local:BooleanToColorConverter x:Key="BooleanToColorConverter" />
    <local:BooleanToStringConverter x:Key="IsHeaderToColor" TrueString="#b11d01" FalseString="#20aeff" />
    <local:BooleanToStringConverter x:Key="IsEvidenceEnteredToColor" TrueString="#78ba00" FalseString="#20aeff" />
    <local:BooleanToVisibilityConverter x:Key="BooleanToVisibility" />
    <local:BooleanToVisibilityConverter x:Key="BooleanToVisibilityReversed" IsReversed="True" />
    <local:DecimalToPercentageConverter x:Key="DecimalToPercentage" />
    <local:DecimalPercentalConverter x:Key="DecimalPercentalConverter" />
    <local:DoubleToBrushConverter x:Key="DoubleToBrush" />
    <local:DoubleToJetGradientConverter x:Key="DoubleToJetColorConverter" />
    <local:NullToVisibilityConverter x:Key="NullToVisibility" />

    <system:Double x:Key="FontSizeLarge">14</system:Double>
    <system:Double x:Key="FontSizeLarger">16</system:Double>
    <system:Double x:Key="FontSizeLargest">18</system:Double>
    
    <system:String x:Key="MarginSmall">5</system:String>
    <system:String x:Key="MarginMedium">10</system:String>
</ResourceDictionary>