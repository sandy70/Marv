<Window x:Class="MapViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:libpipeline="clr-namespace:LibPipeline;assembly=LibPipeline"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="350" Width="525"
        Name="Root"
        Title="Map Viewer" >
    <Grid>
        <libpipeline:BingMap Name="BingMap"
                             CredentialsProvider="Anm5SLDGlJvACmwWmWc8oxJUvt179f2SbEgghXUOWoVHQ1u-t3j_9Kw-VSdKonWq"
                             ZoomLevel="{Binding Level, ElementName=Root, Mode=TwoWay}"/>
        
        <Label Content="{Binding Level, ElementName=Root}"
               Height="50" Width="100"
               HorizontalAlignment="Left" VerticalAlignment="Top" 
               Margin="10"/>
    </Grid>
</Window>
