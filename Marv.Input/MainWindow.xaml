<Window x:Class="Marv.Input.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:marv="http://dnvgl.com/marv"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow"
        Name="Root"
        Width="300">
    <Window.Resources>
        <ResourceDictionary Source="/Marv.Common;component/ResourceDictionary.xaml" />
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        
        <marv:NotificationControl Grid.Row="0"
                                  Notifications="{Binding ElementName=Root, Path=Notifications}" />
        
        <marv:StateControl Grid.Row="1" State="{Binding ElementName=Root, Path=Vertex.States[State1]}"
                           IsEditable="True"/>
    </Grid>
</Window>