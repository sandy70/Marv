<StatusBar x:Class="Marv.Input.StatusControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <TextBlock Name="PercentBlock" TextWrapping="Wrap"></TextBlock>
        <StatusBarItem>
            <ProgressBar Name ="LoadingBar" Minimum="0" Height="10" Width="100" Visibility="{Binding ElementName=Root, Path=Is}" ></ProgressBar>
        </StatusBarItem>
        <TextBlock Name="LoadingBlock" TextWrapping="Wrap"></TextBlock>
    </Grid>
</StatusBar>
