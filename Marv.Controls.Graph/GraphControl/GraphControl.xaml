<UserControl x:Class="Marv.Controls.Graph.GraphControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             xmlns:local="clr-namespace:Marv.Controls.Graph"
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:marv="http://dnvgl.com/marv"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="600"
             Background="Black"
             Name="Root">
    <UserControl.Resources>
        <ResourceDictionary Source="/Marv.Common;component/ResourceDictionary.xaml" />
    </UserControl.Resources>

    <Grid>
        <telerik:RadDiagram Name="DiagramPart"
                            ActiveTool="PanTool"
                            AllowDelete="True"
                            GraphSource="{Binding Graph, ElementName=Root}"
                            IsBackgroundSurfaceVisible="False"
                            IsConnectorsManipulationEnabled="False"
                            IsEditable="False"
                            IsInformationAdornerVisible="False"
                            IsManipulationAdornerVisible="False"
                            IsResizingEnabled="False"
                            IsRotationEnabled="False"
                            IsSnapToItemsEnabled="False"
                            IsSnapToGridEnabled="False"
                            SelectionMode="Extended">

            <telerik:RadDiagram.ConnectionStyle>
                <Style TargetType="telerik:RadDiagramConnection">
                    <Setter Property="ConnectionType" Value="Bezier" />
                    <Setter Property="BezierTension" Value="3" />
                    <Setter Property="Opacity" Value="{Binding ShapeOpacity, ElementName=Root}" />
                    <Setter Property="SourceConnectorPosition" Value="{Binding ConnectorPositions.SourcePosition, Mode=TwoWay}" />
                    <Setter Property="StrokeThickness" Value="10" />
                    <Setter Property="TargetCapType" Value="Arrow1Filled" />
                    <Setter Property="TargetCapSize" Value="20,20" />
                    <Setter Property="TargetConnectorPosition" Value="{Binding ConnectorPositions.TargetPosition, Mode=TwoWay}" />
                    
                    <Setter Property="ContentTemplate">
                        <Setter.Value>
                            <DataTemplate />
                        </Setter.Value>
                    </Setter>
                </Style>
            </telerik:RadDiagram.ConnectionStyle>
            
            <telerik:RadDiagram.ShapeStyle>
                <Style TargetType="telerik:RadDiagramShapeBase">
                    <Setter Property="Opacity" Value="{Binding Opacity}" />
                    <Setter Property="Padding" Value="0" />
                    <Setter Property="Position" Value="{Binding DisplayPosition, Mode=TwoWay}" />
                    <Setter Property="IsDraggingEnabled" Value="{Binding IsLocked}" />
                    <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}" />
                    
                    <Setter Property="ContentTemplate">
                        <Setter.Value>
                            <DataTemplate>
                                <local:VertexControl Background="#DDDDDD"
                                                     IsEditable="{Binding IsLocked, Converter={StaticResource BooleanNot}}"
                                                     Vertex="{Binding}">
                                    <local:VertexControl.Effect>
                                        <DropShadowEffect Opacity="0.5" ShadowDepth="3" Color="#686868" />
                                    </local:VertexControl.Effect>
                                    
                                    <i:Interaction.Behaviors>
                                        <local:VertexControlBehavior />
                                    </i:Interaction.Behaviors>
                                </local:VertexControl>
                            </DataTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </telerik:RadDiagram.ShapeStyle>

            <i:Interaction.Behaviors>
                <local:DiagramPartBehavior />
            </i:Interaction.Behaviors>
        </telerik:RadDiagram>

        <!--<telerik:RadDiagramNavigationPane Name="NavigationPart"
                                          Diagram="{Binding ElementName=DiagramPart}"
                                          Margin="10"
                                          HorizontalAlignment="Right"
                                          VerticalAlignment="Bottom" />-->
    </Grid>
</UserControl>