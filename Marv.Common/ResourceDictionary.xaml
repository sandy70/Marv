<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:local="clr-namespace:Marv.Common"
                    xmlns:system="clr-namespace:System;assembly=mscorlib"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <system:Double x:Key="FontSizeLarge">14</system:Double>
    <system:Double x:Key="FontSizeLarger">16</system:Double>
    <system:Double x:Key="FontSizeLargest">18</system:Double>
    <DropShadowEffect x:Key="DropShadow" Opacity="0.3" ShadowDepth="3" />
    <DropShadowEffect x:Key="DropShadowDeeper" Opacity="0.3" ShadowDepth="5" />
    <SolidColorBrush x:Key="BackgroundLight" Color="LightGray" />
    <SolidColorBrush x:Key="BackgroundMedium" Color="DarkGray" />
    <SolidColorBrush x:Key="BackgroundDark" Color="Gray" />
</ResourceDictionary>