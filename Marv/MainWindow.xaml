        <Grid Name="EditNetworkFileNamesControl"
              Grid.Row="1"
              Visibility="{Binding IsEditNetworkFileNamesControlVisible, ElementName=Root, Converter={StaticResource ResourceKey=BooleanToVisibility}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition />
                <RowDefinition Height="50" />
            </Grid.RowDefinitions>
            
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Button Name="EditNetworkFileNamesControlBackButton">
                    <Button.Template>
                        <ControlTemplate>
                            <Image Source="Resources\back-dark.png" />
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                
                <TextBlock Grid.Column="1" 
                           FontSize="24"
                           FontWeight="Bold"
                           HorizontalAlignment="Left" VerticalAlignment="Center"
                           Margin="5"
                           Text="Network Files" />
            </Grid>
            
            <ListView Grid.Row="1"
                      ItemsSource="{Binding NetworkFileNames, ElementName=Root}"
                      SelectedItem="{Binding SelectedNetworkFileName, ElementName=Root}"
                      SelectionMode="Single">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border Background="LightGray"
                                Margin="5">
                            <TextBlock Text="{Binding Path=.}"
                                       FontSize="24" 
                                       Margin="5" />
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            
            <!-- Buttons -->
            <StackPanel Grid.Row="2"
                        Orientation="Horizontal">
                <telerik:RadButton Name="NetworkFilesAddButton"
                                   Content="Add"
                                   Height="40" Width="100"
                                   HorizontalAlignment="Left" VerticalAlignment="Center"
                                   Margin="5" />

                <telerik:RadButton Name="NetworkFilesRemoveButton"
                                   Content="Remove"
                                   Height="40" Width="100"
                                   HorizontalAlignment="Left" VerticalAlignment="Center"
                                   Margin="5" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>